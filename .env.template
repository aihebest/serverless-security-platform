# .env.template

# Azure Resource Names
RESOURCE_GROUP_NAME=rg-serverless-security
FUNCTION_APP_NAME=fa-security-automation
STATIC_WEB_APP_NAME=SecurityScanDashboard
COSMOS_DB_NAME=security-scan-results-db
SIGNALR_NAME=SecurityAuto
APP_INSIGHTS_NAME=ai-security-automation

# Azure Function Configuration
AZURE_FUNCTIONS_ENVIRONMENT=Production
FUNCTIONS_WORKER_RUNTIME=python
FUNCTION_APP_SCALE_LIMIT=10
WEBSITE_RUN_FROM_PACKAGE=1

# SignalR Configuration
SIGNALR_CONNECTION_STRING=your_signalr_connection_string
SIGNALR_SERVICE_MODE=Default

# Cosmos DB Configuration
COSMOS_DB_CONNECTION_STRING=your_cosmos_connection_string
COSMOS_DB_DATABASE_NAME=SecurityFindings
COSMOS_DB_CONTAINER_NAME=SecurityScans

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key
APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# Security Settings
WEBSITE_AUTH_ENABLED=true
ALLOWED_ORIGINS=https://securityscandashboard.azurewebsites.net

# Static Web App Configuration
STATIC_WEBSITE_ENABLED=true
API_LOCATION=/api
APP_LOCATION=/
OUTPUT_LOCATION=build